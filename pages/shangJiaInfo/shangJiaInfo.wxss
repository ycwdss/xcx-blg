@import "../../utils/util.wxss";

.info-hd{
  padding: 0 20rpx;
  border-bottom: 0;
}
.content{
  margin: 0 20rpx;
}
.tab{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.tab .tab-item{
  position: relative;
  flex: 1;
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-right: 2rpx;
}
.tab .tab-item:last-child{
  margin-right: 0;
}
.active::before{
  position: absolute;
  bottom: -1rpx;
  left: 0;
  z-index: 66;
  content: '';
  width: 100%;
  height: 2rpx;
  background-color: #8ebf30;
}
.active::after{
  position: absolute;
  bottom: -9rpx;
  left: 50%;
  z-index: 66;
  margin-left: -15rpx;
  content: '';
  width: 0;
  height: 0;
  border-left: 15rpx solid transparent;
  border-right:15rpx solid transparent;
  border-top: 10rpx solid #8ebf30;
}


input{
  border-radius: 8rpx;
  width: 150rpx;
  border: 1px solid #8ebf30;
  padding-left: 8rpx;
  font-size: 28rpx;
}
.bd-list{
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.diff{
  flex: 1;
  text-align: center;
}
.list-btn  .asn-sure{
  float: right;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  text-align: center;
}
.list-btn .asn-diff{
  text-align: right;
}
.list-info{
  flex: 3;
}
.list-layer{
  flex: 1;
  text-align: right;
}
.list-info{
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
swiper-item{
overflow: auto;
}
swiper-item .bd-list:last-child{
  margin-bottom: 200rpx;
}